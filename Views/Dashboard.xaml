<Window x:Class="Ventuz.Views.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ventuz"
        xmlns:vm="clr-namespace:Ventuz.ViewModels"
        mc:Ignorable="d"
        Title="Dashboard"
        Height="450" Width="800"
        MinHeight="400" MinWidth="600"
        Icon="pack://application:,,,/Assets/CTRL.ico">
    <Window.DataContext>
        <vm:DashboardViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Header="Alle Projekte" Grid.Column="0" Grid.Row="0" Margin="5">
            <ListBox ItemsSource="{Binding AllProjects}" SelectedItem="{Binding SelectedProject}" />
        </GroupBox>

        <GroupBox Header="Zuletzt geöffnet" Grid.Column="1" Grid.Row="0" Margin="5">
            <ListBox ItemsSource="{Binding RecentProjects}" SelectedItem="{Binding SelectedProject}" />
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0" VerticalAlignment="Top" Margin="10">
            <Button Content="Projekt öffnen" Margin="5" Padding="10,5"
                    Command="{Binding OpenProjectCommand}" />
            <Button Content="Neues Projekt anlegen" Margin="5" Padding="10,5"
                    Command="{Binding NewProjectCommand}" />
        </StackPanel>
    </Grid>
</Window>