<Window x:Class="Ventuz.Views.ControlDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neues Element anlegen" Height="220" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Icon="pack://application:,,,/Assets/CTRL.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name:" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,0,5,5"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

        <TextBlock Text="Typ:" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,0,5,5"/>
        <ComboBox x:Name="TypeComboBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" IsEditable="True">
            <ComboBoxItem Content="Button"/>
            <ComboBoxItem Content="Slider"/>
            <ComboBoxItem Content="Switch"/>
            <ComboBoxItem Content="Label"/>
            <ComboBoxItem Content="Trigger"/>
        </ComboBox>

        <TextBlock Text="Command:" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="0,0,5,5"/>
        <TextBox x:Name="CommandTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="5" IsDefault="True" Click="Ok_Click"/>
            <Button Content="Abbrechen" Width="75" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>